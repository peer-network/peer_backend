  "Pagination offset (0–PHP_INT_MAX)"
  offset: Int
  "Pagination limit (1–20)"
  limit: Int
  "Message offset (0–PHP_INT_MAX)"
  messageOffset: Int
  "Message limit (1–20)"
  messageLimit: Int
}

input ListChatMessagesInput {
  "Chat ID (UUID)"
  chatid: ID!
  "Message offset (0–PHP_INT_MAX)"
  offset: Int
  "Message limit (1–20)"
  limit: Int
}

input DayPaginatedInput {
  "Day filter (D0–D5, W0, M0, Y0)"
