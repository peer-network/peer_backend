  "Pagination offset (0–PHP_INT_MAX)"
  offset: Int
  "Pagination limit (1–20)"
  limit: Int
}

input UpdateUsernameInput {
  "Username (3–23 characters, must contain a letter; letters, numbers, underscores allowed)"
  username: String!
  "Current password (8–128 characters)"
  password: String!
}

input UpdateEmailInput {
  "New email address (valid format)"
  email: String!
  "Current password (required to update email)"
  password: String!
}

input UpdatePasswordInput {
  "New password (8–128 characters, must differ from current, include lowercase/uppercase/number)"
  password: String!
  "Current password (required to update password)"
  expassword: String!
}

input ChatInput {
  "Chat name (valid string)"
  name: String!
  "Chat image (base64, must be valid image)"
  image: String
  "List of recipient user IDs"
  recipients: [String!]!
}

input UpdateChatInput {
  "Chat ID (UUID)"
  chatid: ID!
  "New chat name (valid string)"
  name: String
  "New image (base64, must be valid image)"
  image: String
}

input ChatParticipantsInput {
  "Chat ID (UUID)"
  chatid: ID!
  "List of recipient user IDs"
  recipients: [String!]!
}

input SendChatMessageInput {
  "Chat ID (UUID)"
  chatid: ID!
  "Message content (1–500 characters)"
  content: String!
}

input DeleteChatMessageInput {
  "Chat ID (UUID)"
  chatid: ID!
  "Message ID (Int)"
  messid: Int!
}

input FeedInput {
  "Feed ID"
  feedid: ID!
  "Title (2–30 characters)"
  title: String!
  "Media (base64, must be valid image/audio/video/text)"
  media: String!
  "Media description (3–500 characters)"
  mediadescription: String
  "Content type (ENUM: image, audio, video, text)"
  contenttype: String!
}

input PostInput {
  "Title (2–63 characters; letters, numbers, spaces, -, _)"
  title: String!
  "Media description (3–500 characters)"
  mediadescription: String
  "Content type (ENUM: image, audio, video, text)"
  contenttype: ContentType!
  "Media files (base64-encoded strings)"
  media: [String!]
  "Cover images (base64-encoded strings)"
  cover: [String!]
  "Tags (max 10, each 2–53 characters)"
  tags: [String!]
}

input CreatePostInput {
  "Post type (ENUM: POST)"
  action: PostType!
  "Post content input"
  input: PostInput!
}

input CreateCommentInput {
  "Comment type (ENUM: COMMENT)"
  action: CommentType!
  "Post ID (UUID)"
  postid: ID!
  "Parent comment ID (UUID, optional)"
  parentid: ID
  "Comment content"
  content: String!
}

input ResolvePostActionInput {
  "Action (ENUM: LIKE, DISLIKE, REPORT, VIEW, SAVE)"
  action: PostActionType!
  "Post ID (UUID)"
  postid: ID!
}

input TokenTransferInput {
  "Recipient user ID (UUID)"
  recipient: ID!
  "Token amount (must be more than 10)"
  numberoftokens: Int!
}
